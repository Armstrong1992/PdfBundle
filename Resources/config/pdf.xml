<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="ps_pdf.glyph_file">null</parameter>
		<parameter key="ps_pdf.enhancement_file">null</parameter>
	</parameters>

    <services>
    	<service id="ps_pdf.facade" class="PHPPdf\Parser\Facade">
    		<argument id="ps_pdf.configuration.loader" type="service" />
    	</service>

    	<service id="ps_pdf.configuration.loader" class="PHPPdf\Configuration\DependencyInjection\LoaderImpl" public="false">
    		<argument type="service" id="service_container" />
    		<argument>%ps_pdf.glyph_file%</argument>
    		<argument>%ps_pdf.enhancement_file%</argument>
    	</service>
    	
    	<service id="ps_pdf.listener" class="Ps\PdfBundle\EventListener\PdfListener">
    		<tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-300" />
    		<tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" priority="-300" />
    		<tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
    		<argument id="ps_pdf.facade" type="service" />
    		<argument id="annotation_reader" type="service" />
    		<argument id="ps_pdf.reflection_factory" type="service" />
    		<argument id="templating" type="service" />
    	</service>
    	
    	<service id="ps_pdf.reflection_factory" class="Ps\PdfBundle\Reflection\Factory" public="false" />
    </services>
</container>